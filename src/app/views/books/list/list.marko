<html>
    <head>
        <meta charset="utf-8">
        <script src="/static/js/remove-book.js" defer>
        </script> 
    </head>
    <body>
        <h1> Listagem de livros </h1>

        <table id="books">
            <tr>
                <td>ID</td>
                <td>Título</td>
                <td>Preço</td>
                <td>Editar</td>
                <td>Remover</td>
            </tr>
            <tr id="book_${book.id}" for (book in data.books)> 
                <td>${book.id}</td>
                <td>${book.titulo}</td>
                <td>${book.preco}</td>
                <td><a href="#">Editar</a></td> 
                <td><a href="#" data-ref="${book.id}" data-type="remove">Remover</a></td> 
            </tr>
        </table> 
      
        <br>
        <br>
        <include('../../home/address.marko')>
        </include>
    </body> 
</html>